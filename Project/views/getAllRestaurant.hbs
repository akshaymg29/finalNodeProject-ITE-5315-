 <section>

<h1>Dhruv Patel</h1>

<title>{{title}}</title>

<form method="get">

    <div class="col-md-12">
        <input class="form-control" type="number" name="page" placeholder="Page Number" required>
    </div>
    <div class="col-md-12">
        <input class="form-control" type="number" name="perPage" placeholder="per Page items" required>
    </div>
    <div class="col-md-12">
        <input class="form-control" type="text" name="borough" placeholder="Borough" required>
    </div>
    <div class="form-button mt-3">
        <button id="submit" type="submit" class="btn btn-primary">Filter Data</button>
    </div>

</form>

<h3>List of Books</h3>

<table border="1">

    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Grades</th>
        <th>Cuisine</th>
        <th>Borough</th>
    </tr>

        
    {{#each restaurants}}
    
    <tr>
        
        <td>{{this.restaurant_id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.address}}</td>
        <td>{{this.grades}}</td>
        <td>{{this.cuisine}}</td>
        <td>{{this.borough}}</td>


    </tr>
    
    {{/each}}
    


</table>

</section><!-- End Hero Section -->
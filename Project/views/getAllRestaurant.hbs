 <section>

<h1>Dhruv Patel</h1>

<title>{{title}}</title>

<form method="get">

    <div class="col-md-12">
        <input class="form-control" type="number" name="page" placeholder="Page Number" required>
    </div>
    <div class="col-md-12">
        <input class="form-control" type="number" name="perPage" placeholder="per Page items" required>
    </div>
    <div class="col-md-12">
        <input class="form-control" type="text" name="borough" placeholder="Borough">
    </div>
    <div class="form-button mt-3">
        <button id="submit" type="submit" class="btn btn-primary">Filter Data</button>
    </div>

</form>

<h3>List of Books</h3>

<table border="1">

    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Cuisine</th>
        <th>Borough</th>
        <th>Get Restaurant details</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

        
    {{#each data}}
    
    <tr>
        
        <td>{{restaurant_id}}</td>
        <td>{{name}}</td>
        <td>{{cuisine}}</td>
        <td>{{borough}}</td>
        <td><a href="/api/restaurants/{{_id}}">Get Details</a></td>
        <td><a href="/api/restaurants/{{_id}}">Update</a></td>
        <td>
            <a href="/deleteRestaurant/{{_id}}">
            Delete
            </a>
        </td>

        


    </tr>
    
    {{/each}}
    


</table>

</section><!-- End Hero Section -->